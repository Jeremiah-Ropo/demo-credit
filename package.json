{
  "name": "demo-credit-backend-api",
  "version": "0.0.1",
  "description": "Backend API for the demo-credit application",
  "repository": "https://github.com/Jeremiah-Ropo/demo-credit.git",
  "author": "Jeremiah <patrickjeremiah00@gmail.com>",
  "license": "UNLICENSED",
  "scripts": {
    "start": "NODE_ENV=production yarn install --production=false && yarn build && node ./dist/src/index.js",
    "build": "rimraf ./dist && tsc",
    "postbuild": "tsc -p tsconfig.knex.json",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "dev": "ts-node-dev --respawn --pretty ./src/index.ts",
    "test": "mocha --require ts-node/register ./test/**/index.ts --timeout 20000 --exit",
    "test:wallets": "mocha --require ts-node/register ./test/wallet*/index.ts --timeout 20000 --exit",
    "test:users": "mocha --require ts-node/register ./test/user*/index.ts --timeout 20000 --exit",
    "migrate:latest": "yarn knex migrate:latest --knexfile knexfile.ts"
  },
  "engines": {
    "node": ">=14.x"
  },
  "dependencies": {
    "@types/knex": "^0.16.1",
    "@types/morgan": "^1.9.4",
    "axios": "^1.7.4",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "debug": "4.3.5",
    "dotenv": "^16.0.1",
    "express": "^4.19.2",
    "express-session": "^1.17.3",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.1",
    "knex": "^3.1.0",
    "morgan": "^1.10.0",
    "mysql2": "^3.11.4",
    "nanoid": "^3.1.30",
    "node-cache": "^5.1.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "streamifier": "^0.1.1",
    "typedi": "^0.10.0",
    "validator": "^13.6.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.4",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/mocha": "^10.0.3",
    "@types/node": "^20.9.0",
    "@types/nodemailer": "^6.4.9",
    "@types/nodemon": "^1.19.1",
    "@typescript-eslint/eslint-plugin": "^8.2.0",
    "@typescript-eslint/parser": "^8.2.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "chai": "^4.3.10",
    "mocha": "^10.2.0",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.3"
  }
}
